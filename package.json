{
  "name": "@ideamall/mini-app",
  "version": "1.0.0",
  "private": true,
  "description": "Taro project scaffold based on TypeScript, Preact, MobX & Vant",
  "templateInfo": {
    "name": "default",
    "typescript": true,
    "css": "less"
  },
  "scripts": {
    "postinstall": "weapp-tw patch",
    "prepare": "husky",
    "clean": "rm -rf .swc/ dist/",
    "build": "npm run clean  &&  taro build --type",
    "dev": "npm run clean  &&  taro build --watch --type",
    "test": "lint-staged",
    "prepublishOnly": "cross-env NODE_ENV=production  npm run build -- weapp"
  },
  "browserslist": [
    "last 3 versions",
    "Android >= 4.1",
    "ios >= 8"
  ],
  "dependencies": {
    "@antmjs/vantui": "~3.4.9",
    "@babel/runtime": "^7.27.6",
    "@tarojs/components": "4.1.3",
    "@tarojs/helper": "4.1.3",
    "@tarojs/plugin-framework-react": "4.1.3",
    "@tarojs/plugin-html": "4.1.3",
    "@tarojs/plugin-http": "4.1.3",
    "@tarojs/plugin-platform-alipay": "4.1.3",
    "@tarojs/plugin-platform-h5": "4.1.3",
    "@tarojs/plugin-platform-jd": "4.1.3",
    "@tarojs/plugin-platform-qq": "4.1.3",
    "@tarojs/plugin-platform-swan": "4.1.3",
    "@tarojs/plugin-platform-tt": "4.1.3",
    "@tarojs/plugin-platform-weapp": "4.1.3",
    "@tarojs/react": "4.1.3",
    "@tarojs/runtime": "4.1.3",
    "@tarojs/shared": "4.1.3",
    "@tarojs/taro": "4.1.3",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@vant/area-data": "^2.0.0",
    "@vant/icons": "^3.0.2",
    "classnames": "^2.5.1",
    "koajax": "^3.1.2",
    "koajax-taro-adapter": "^0.2.2",
    "lodash.debounce": "^4.0.8",
    "mobx": "^6.13.7",
    "mobx-i18n": "^0.7.1",
    "mobx-react": "^9.2.0",
    "mobx-react-helper": "^0.5.0",
    "mobx-restful": "^2.1.0",
    "preact": "10.22.0",
    "query-string": "^9.2.2",
    "web-utility": "^4.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@cspell/eslint-plugin": "^9.1.2",
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.30.1",
    "@prefresh/babel-plugin": "^0.5.2",
    "@prefresh/core": "^1.5.5",
    "@prefresh/webpack": "~4.0.3",
    "@stylistic/eslint-plugin": "^5.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tarojs/cli": "4.1.3",
    "@tarojs/webpack5-runner": "4.1.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/lodash.debounce": "^4.0.9",
    "@types/react": "^19.1.8",
    "@types/webpack-env": "^1.18.8",
    "babel-plugin-import": "^1.13.8",
    "babel-preset-taro": "4.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.2.4",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^4.1.11",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "weapp-tailwindcss": "^4.1.10",
    "webpack": "~5.99.9"
  },
  "resolutions": {
    "idb-keyval": "npm:taro-idb-keyval"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@swc/core",
      "@tailwindcss/oxide",
      "@tarojs/binding",
      "@tarojs/cli",
      "core-js",
      "core-js-pure",
      "esbuild",
      "weapp-tailwindcss"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid",
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "lint-staged": {
    "*.{md,js,ts,tsx,json,yml}": "prettier --write",
    "*.{js,ts,tsx}": "eslint --fix"
  }
}
